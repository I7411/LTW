
@{
    ViewBag.Title = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/wwwroot/CSS/Login.css" />
    <title>Login</title>
</head>
<body>
    <div class="container">
        <div class="bg-slide"></div>
        <div class="bg-slide"></div>
        <div class="bg-slide"></div>
        <div class="bg-slide"></div>
        <div class="formLogin">
            @using (Html.BeginForm("Login", "Account", FormMethod.Post))
            {
                <img src="~/wwwroot/Images/Logo.jpg" alt="" />
                if (TempData["Notice"] != null)
                {
        <div id="Notice" style="color: red; font-weight: bold;position:absolute; left:200px;top:120px;z-index:1000">@Html.Raw(TempData["Notice"])</div>
                }
                <table>
                    <tr>
                        <td colspan="2" style="position: relative">
                            <img src="~/wwwroot/Images/user.png" alt="" /><input type="text"
                                                                                 name="userName"
                                                                                 id="userName"
                                                                                 placeholder="Nhập thông tin tài khoản" />
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2" style="position: relative">
                            <img src="~/wwwroot/Images/password.png" alt="" />
                            <input type="password"
                                   placeholder="Nhập mật khẩu"
                                   id="passWord"
                                   name="passWord" />
                        </td>
                    </tr>
                    <tr>
                        <td id="chekcboxPass" colspan="2">
                            <label for="">
                                <input type="checkbox" onclick="showPass()" /><strong>Hiện thị mật khẩu</strong>
                            </label>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <button type="submit">ĐĂNG NHẬP</button>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <select id="login" onchange="hide()" name="position">
                                <option value="reader">Độc giả</option>
                                <option value="librarian">Thủ thư</option>
                                <option value="admin">Admin</option>
                            </select>
                        </td>
                        <td>
                            <a href="@Url.Action("ForgotPassword","Account")"><em>Quên mật khẩu</em></a>
                        </td>
                    </tr>
                </table>
                <div class="Sign_in" id="sign">
                    <table>
                        <tr>
                            <td>Bạn chưa có thẻ thư viện?</td>
                            <td>
                                <a href="@Url.Action("SignUpAccount","Account")"><em>Đăng ký mở thẻ</em></a>
                            </td>
                        </tr>
                    </table>
                </div>

            }

        </div>
    </div>
    <script>
      function showPass() {
          var pass = document.getElementById("passWord");
          if (pass.type == "password") {
          pass.type = "text";
        } else {
              pass.type = "password";
        }
        }
        setTimeout(function () {
            var alert = document.getElementById('Notice');
            if (alert) {
                alert.style.display = 'none';
            }
        }, 3000);
      function hide() {
        var hide = document.getElementById("login");
        var element = document.getElementById("sign");
        if (!element) return;

        if (hide.value !== "reader") {
          element.style.display = "none";
        } else {
          element.style.display = "block";
        }
      }
    </script>
</body>
</html>


