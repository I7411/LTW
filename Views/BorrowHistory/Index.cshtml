@using QLTHUVIEN.Models
@model List<BorrowHistoryVM>

@{
    ViewBag.Title = "Lịch sử mượn";
    Layout = "~/Views/Shared/_Layout.cshtml"; // đường dẫn đến layout hiện tại
}

<div class="borrow-history">
    <h2>Lịch sử mượn</h2>

    @foreach (var item in Model)
    {
        <div class="borrow-record">
            <h3>Phiếu: @item.MaPhieu</h3>
            <p><strong>Ngày mượn:</strong> @item.NgayMuon.ToString("dd/MM/yyyy")</p>
            <p><strong>Ngày trả:</strong> @(item.NgayTra != DateTime.MinValue ? item.NgayTra.ToString("dd/MM/yyyy") : "Chưa trả")</p>


            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Sách</th>
                        <th>Số lượng</th>
                        <th>Phí</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ct in item.ChiTiet)
                    {
                        <tr>
                            <td>@ct.TAILIEU.TENSACH</td>
                            <td>@ct.SOLUONG</td>
                            <td>@ct.PHIMUON.ToString("C0")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

<style>
    .borrow-history {
        margin-bottom: 30px;
    }

    .borrow-record {
        margin-bottom: 25px;
        padding: 15px;
        border: 1px solid #ddd;
        border-radius: 8px;
        background-color: #f9f9f9;
    }

        .borrow-record h3 {
            margin-top: 0;
        }

    .table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 10px;
    }

        .table th, .table td {
            padding: 8px 12px;
            border: 1px solid #ccc;
            text-align: left;
        }

        .table th {
            background-color: #f1f1f1;
        }
</style>
