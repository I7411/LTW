
@{
    ViewBag.Title = "DocumenManagement";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản lý tài liệu</title>
    <link rel="stylesheet" href="~/wwwroot/css/ReaderManagement.css" />
    <link rel="stylesheet" href="~/wwwroot/css/MainPage_Admin.css" />
    <link rel="stylesheet" href="~/wwwroot/css/AccountManagement.css">
    <style>
        .buttons {
            display: flex;
            align-content: center;
            justify-content: center;
            gap: 20px;
        }

            .buttons button {
                padding: 10px 20px;
                margin-right: 10px;
                background-color: #007bff;
                color: white;
                border: none;
                cursor: pointer;
                border-radius: 10px;
                margin-bottom: 20px;
            }

        button:hover {
            background-color: #00B9FB;
        }

        .buttons button:last-child {
            background-color: #dc3545;
        }

            .buttons button:last-child:hover {
                background-color: lightcoral;
            }

        .container {
            background-color: #FFF;
            border: #007bff solid;
        }

            .container table {
                width: 80%;
                border-collapse: collapse;
                margin-top: 20px;
                background-color: white;
            }

                .container table td {
                    text-align: left;
                }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
        }

        .container table td {
            border: none;
            height: 35px;
        }

        .container table tr td:first-child {
            width: 150px;
        }

        .container table {
            border: none;
        }

        table th {
            background-color: #007bff;
            color: #FFF;
        }

        .navigation span {
            color: red;
            font-size: 25px;
            text-align: center;
        }

        label {
            color: black;
        }

        .navigation {
            text-align: center;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .tab tr th, td {
            text-align: center;
        }

        .tab tbody tr:hover {
            background-color: lightskyblue;
        }

        .InfoDoc {
            max-height: 300px;
            overflow-y: auto;
        }

        .tab {
            max-height: 100px;
            overflow-y: auto;
        }
        #btnClear{
            height:90%;
            background-color:lightblue;
        }
            #btnClear:hover {
                background-color: gray;
            }
    </style>
</head>
<body>
    <header>
        <div class="logo">
            <div class="imgTitle"><img src="~/wwwroot/Images/Logo.png" alt="" /></div>
            <div class="titleHeader">
                <strong>
                    <img src="~/wwwroot/Images/book.png" alt="" />HỌC HẾT SỨC - CHƠI
                    HẾTMÌNH
                </strong>
                <div class="Search"> <input type="text" name="Search" placeholder="Nhập thông tin cần tìm!"> <button id="Search">Tìm</button></div>
            </div>
        </div>
        <div style="height: 50px;" class="navigation">
            <span>Quản lý tài liệu</span>
        </div>
    </header>
    <div class="container">
        <table>
            <tr>
                <td><label for="maTaiLieu">Mã tài liệu</label></td>
                <td><input type="text" id="maTaiLieu"></td>
                <td><label for="tinhTrang">Tình trạng</label></td>
                <td><input type="text" id="tinhTrang"></td>
            </tr>
            <tr>
                <td><label for="tenTaiLieu">Tên tài liệu</label></td>
                <td><input type="text" id="tenTaiLieu"></td>
                <td><label for="tenTacGia">Tên tác giả</label></td>
                <td><input type="text" id="tenTacGia"></td>
                <td style="width:30px;"><button  id="btnClear">Xóa dữ liệu</button></td>
            </tr>
            <tr>
                <td><label for="ngonNgu">Ngôn ngữ</label></td>
                <td><input type="text" id="ngonNgu"></td>
                <td><label for="theLoai">Thể loại</label></td>
                <td><input type="text" id="theLoai"></td>
            </tr>
            <tr>
                <td><label for="chiPhi">Chi phí</label></td>
                <td><input type="text" id="chiPhi"></td>
                <td><label for="sl">Số lượng</label></td>
                <td><input type="number" id="sl"></td>
            </tr>
        </table>

        <div class="buttons" style="margin-top: 16px;">
            <button id="btnAdd">Thêm</button>
            <button id="btnDelete">Xóa</button>
            <button id="btnUpdate">Cập nhật</button>
            <button type="button" onclick="location.href = '@Url.Action("LibrarianHome","Home")'">Thoát</button>
        </div>
    </div>
    <div class="InfoDoc">
        <h2>Danh sách tài liệu</h2>
        <table class="tab" style="width:90%;">
            <thead>
                <tr>
                    <th>STT</th>
                    <th>Mã tài liệu</th>
                    <th>Tên tài liệu</th>
                    <th>Ngôn ngữ</th>
                    <th>Chi phí</th>
                    <th>Tác giả</th>
                    <th>Thể loại</th>
                    <th>Tình trạng</th>
                    <th>Số lượng</th>
                </tr>
            </thead>
            <tbody>
                @{
                    var Database = new Library_Management.Models.QUANLYTHUVIENEntities();
                    var Doc = Database.TAILIEUx;
                    int stt = 1;
                    foreach (var item in Doc)
                    {
                        <tr>
                            <td>@stt</td>
                            <td>@item.MATAILIEU</td>
                            <td>@item.TENSACH</td>
                            <td>@item.NGONNGU</td>
                            <td>@item.PHIMUON</td>
                            <td>@item.TENTACGIA</td>
                            <td>@item.THELOAI</td>
                            <td>@item.TINHTRANG</td>
                            <td>@item.SOLUONG</td>
                        </tr>
                        stt++;
                    }

                }
            </tbody>
        </table>
    </div>
    <script src="@Url.Content("~/wwwroot/JS/jquery-3.3.1.min.js")"></script>
    <script>
$(document).ready(function () {
    // Gán dữ liệu từ bảng lên form khi click hàng
    $(".tab tbody tr").click(function () {
        var code = $(this).find("td:eq(1)").text().trim();
        var name = $(this).find("td:eq(2)").text().trim();
        var lang = $(this).find("td:eq(3)").text().trim();
        var price = $(this).find("td:eq(4)").text().trim();
        var author = $(this).find("td:eq(5)").text().trim();
        var cat = $(this).find("td:eq(6)").text().trim();
        var now = $(this).find("td:eq(7)").text().trim();
        var quantity = $(this).find("td:eq(8)").text().trim();

        $("#maTaiLieu").val(code);
        $("#tenTaiLieu").val(name);
        $("#ngonNgu").val(lang);
        $("#chiPhi").val(price);
        $("#tenTacGia").val(author);
        $("#theLoai").val(cat);
        $("#tinhTrang").val(now);
        $("#sl").val(quantity);
    });
    //xóa dữ liệu
    $("#btnClear").click(function () {
        $("#maTaiLieu").val('');
        $("#tenTaiLieu").val('');
        $("#ngonNgu").val('');
        $("#chiPhi").val('');
        $("#tenTacGia").val('');
        $("#theLoai").val('');
        $("#tinhTrang").val('');
        $("#sl").val('');
    });
    // Thêm tài liệu
$("#btnAdd").click(function () {
    var data = getFormData();
    $.post('@Url.Action("ThemTaiLieu", "Management")', data, function (res) {
        if (res.success) {
            alert("Đã thêm tài liệu!");
            location.reload();
        } else {
            alert(res.message || "Thêm tài liệu thất bại!");
        }
    });
});
    // Xóa tài liệu
    $("#btnDelete").click(function () {
        var id = $("#maTaiLieu").val();
        if (id == "") {
            alert("Vui lòng nhập mã tài liệu để xóa!");
            return;
        }
        $.post('@Url.Action("XoaTaiLieu", "Management")', { id: id }, function (res) {
            if (res.success) {
                alert("Đã xóa tài liệu!");
                location.reload();
            } else {
                alert("Không tìm thấy tài liệu!");
            }
        });
    });

    // Cập nhật tài liệu
    $("#btnUpdate").click(function () {
        var data = getFormData();
        $.post('@Url.Action("CapNhatTaiLieu", "Management")', data, function (res) {
            if (res.success) {
                alert("Đã cập nhật tài liệu!");
                location.reload();
            } else {
                alert("Không tìm thấy tài liệu!");
            }
        });
    });
});

// Hàm lấy dữ liệu từ form
function getFormData() {
    return {
        MATAILIEU: $("#maTaiLieu").val(),
        TENSACH: $("#tenTaiLieu").val(),
        NGONNGU: $("#ngonNgu").val(),
        PHIMUON: $("#chiPhi").val(),
        TENTACGIA: $("#tenTacGia").val(),
        THELOAI: $("#theLoai").val(),
        TINHTRANG: $("#tinhTrang").val(),
        SOLUONG: $("#sl").val()
    };
}
    </script>
</body>
</html>

