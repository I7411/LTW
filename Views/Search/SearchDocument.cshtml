@model Library_Management.Models.BorrowDocumentsViewModel
@{
    ViewBag.Title = "SearchDocument";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <title>Tìm kiếm tài liệu - Thư viện</title>
    <link rel="icon" type="image/png" href="~/wwwroot/Images/logoCongThuong.png" />
    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
        }

        .header-container {
            display: flex;
            background-color: #007bff;
            padding: 15px 20px;
            color: white;
            align-items: center;
        }

        .logo {
            height: 60px;
            margin-right: 20px;
        }

        .university-info {
            flex-grow: 1;
        }

        .university-name {
            font-weight: bold;
            font-size: 18px;
            margin-bottom: 5px;
        }

        .library-name {
            font-size: 16px;
        }

        .banner {
            font-size: 18px;
            font-weight: bold;
            padding-left: 20px;
            border-left: 2px solid white;
            margin-left: 20px;
        }

        .search-bar {
            background-color: #0b0c66;
            padding: 10px;
            color: white;
            text-align: center;
            font-size: 20px;
            font-style: italic;
        }

        .search-section {
            background-color: #f3f3f3;
            padding: 20px;
            text-align: center;
        }

        .search-title {
            font-weight: bold;
            margin-bottom: 15px;
            font-size: 18px;
        }

        .search-box {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 10px;
            margin-bottom: 15px;
        }

        .search-input {
            padding: 10px;
            border-radius: 5px;
            border: 1px solid #ccc;
            width: 300px;
            font-size: 16px;
        }

        .search-button, .exit-button {
            padding: 10px 25px;
            border-radius: 10px;
            border: none;
            cursor: pointer;
            font-size: 16px;
            transition: all 0.3s;
            text-decoration: none;
            display: inline-block;
        }

        .search-button {
            background-color: #6c757d;
            color: white;
            margin-right: 5px;
        }

        .exit-button {
            background-color: #dc3545;
            color: white;
        }

        .search-button:hover {
            background-color: #5a6268;
        }

        .exit-button:hover {
            opacity: 0.9;
        }

        .table-container {
            margin: 20px;
            overflow-x: auto;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            text-align: center;
        }

        th, td {
            border: 1px solid #aaa;
            padding: 10px;
        }

        th {
            background-color: #ccc;
            font-size: 18px;
        }

        td {
            background-color: #fff;
        }

        .no-data {
            text-align: center;
            padding: 20px;
            font-size: 18px;
            color: #666;
            background-color: #f8f9fa;
            border-radius: 5px;
            margin: 20px;
            border: 1px dashed #ccc;
        }
    </style>
</head>
<body>

    <div class="header-container">
        <img src="~/wwwroot/Images/Logo.jpg" alt="Logo" class="logo">
        <div class="university-info">
            <div class="university-name">ĐẠI HỌC CÔNG THƯƠNG TP. HỒ CHÍ MINH</div>
            <div class="library-name">TRUNG TÂM THÔNG TIN - THƯ VIỆN</div>
        </div>
        <div class="banner">HỌC HẾT SỨC - CHƠI HẾT MÌNH</div>
    </div>
    @using (Html.BeginForm("Search", "Search", FormMethod.Get))
    {

        <div class="search-bar">
            Tìm kiếm tài liệu
        </div>

        <div class="search-section">
            <div class="search-box">
                <input type="text" class="search-input" placeholder="Nhập thông tin cần tìm" id="keyword" name="keyword">
                <button style="margin-left: -7px; margin-right: 7px;" class="search-button" id="searchButton">Tìm</button>
                <a href="trang-chu.html" class="exit-button">Thoát</a>
            </div>
        </div>
    }
    <div class="table-container">
        <div id="noDataMessage" class="no-data">
            Không có dữ liệu tài liệu nào được tìm thấy
        </div>

        <table id="resultsTable">
            <thead>
                <tr>
                    <th>STT</th>
                    <th>Mã tài liệu</th>
                    <th>Tên tài liệu</th>
                    <th>Ngôn ngữ</th>
                    <th>Chi phí</th>
                    <th>Tác giả</th>
                    <th>Thể loại</th>
                    <th>Tình trạng</th>
                </tr>
            </thead>
            <tbody id="tableBody">
                @if (Model.TaiLieuList2 != null && Model.TaiLieuList2.Any())
                {
                    int STT = 1;
                    foreach (var item in Model.TaiLieuList2)
                    {
                <tr>
                    <td>@STT</td>
                    <td>@item.MATAILIEU</td>
                    <td>@item.TENSACH</td>
                    <td>@item.NGONNGU</td>
                    <td>@item.CHIPHI</td>
                    <td>@item.TACGIA</td>
                    <td>@item.THELOAI</td>
                    <td>@item.TINHTRANG</td>
                </tr>
                        STT++;
                    }
                }
                else
                {
                    <tr><td colspan="8">Không có dữ liệu</td></tr>
                }

            </tbody>
        </table>
    </div>

    <script>
    </script>
</body>
</html>

